<div class="meeting-input flex-row center-y">
  <label class="meeting-input_name"><span class="impt">Name</span></label>
  <div class="input-container flex-row center-y">
    <input class="input" placeholder="Charan" />
  </div>
</div>

<div class="date-container meeting-input">
  <div class="flex-row">
    <div class="meeting-input_name mt8"><span>Date & Time</span></div>
    <div class="flex flex-col">
      <div class="flex-row center-y">
        <div class="calender-input flex-row fg">
          <div class="input flex-row justify-between">
            <div class="flex-row center-y fg" style="height: 100%;">
              23 Nov., 07:30 AM
            </div>
            <label for="custom" class="flex-row center-y calender-icon">
              {{icons/calender-icon}}
              <input type="date" id="custom" />
            </label>

          </div>

        </div>
        <span class="date-text">to</span>
        <div class="calender-input flex-row fg">
          <div class="input flex-row justify-between">
            <span class="flex-row center-y fg" style="height: 100%;">
              23 Nov., 07:30 AM
            </span>
            <label for="custom" class="flex-row center-y calender-icon">
              {{icons/calender-icon}}
              <input type="date" id="custom" />
            </label>

          </div>

        </div>
      </div>
      <span class="date-type">
        ( GMT +5:30 ) India Standard Time(Asia/Kolkata)
      </span>
      <div class="flex-row align">
        <label class="checkbox" for="check">

          <input type="checkbox" id="check" style="display:none" />

          <div class="check flex-row center">
            &checkmark;
          </div>
        </label>
        <p class="repeat">Repeat event</p>
      </div>
      <div class="meeting-interval">Hi</div>

    </div>
  </div>

</div>

<div class="meeting-input flex-row center-y">
  <label class="meeting-input_name"><span>Location</span></label>
  <div class="input-container flex-row center-y">
    <input class="input" placeholder="Conference Room" />
  </div>
</div>

<div class="meeting-input meeting-type-item-wrapper flex-row">
  <label class="meeting-input_name" style="margin-top: 8px;"><span>Meeting mode</span></label>
  <div class="flex-col fg">
    <div class="flex-row fg flex-between center-y">
      <div class="flex-row center-y">
        <div class="meeting-type-item-container flex-row">
          <input
            type="checkbox"
            id="meeting-type"
            style="display:none ;"
            checked="true"
          />
          <label
            class="meeting-type-item meeting-audio flex-row center-y"
            for="meeting-type"
          >
            {{icons/audio-icon}}&nbsp; Audio Call
          </label>
          <label
            class="meeting-type-item meeting-video flex-row center-y"
            for="meeting-type"
          >
            {{icons/video-icon}}&nbsp; Video Call
          </label>
        </div>
        <div class="info">{{icons/info-icon}}</div>

      </div>
      <div class="flex-row align center-y">
        <label class="checkbox" for="check-meeting">
          <input type="checkbox" id="check-meeting" style="display:none" />

          <div class="check flex-row center">
            &checkmark;
          </div>
        </label>
        <p class="repeat">Record</p>
        <div class="info" style="margin-top: 5px;">{{icons/info-icon}}</div>

      </div>

    </div>

    <div class="hosts flex-row">
      <div class="host flex-row center-y">
        <div class="circle"></div>
        <p class="text">+Add Co-Hosts</p>
      </div>

      <div class="host flex-row center-y">
        <div class="circle"></div>
        <p class="text">+Add Speakers</p>
      </div>
    </div>
  </div>
</div>

<div class="assign meeting-input meeting-type-item-wrapper flex-row">
  <label class="meeting-input_name" style="margin-top: 8px;"><span>Assign to</span></label>
  <div class="flex-col fg">
    <div class="flex-row">
      <span class="text part active">Participants</span>
      <span class="text conv">Conversations</span>

    </div>
    <div class="invite fg">
      <input class="input" placeholder="Charan" />
    </div>
  </div>
</div>

<div
  class="action meeting-input meeting-type-item-wrapper flex-row flex-between"
>
  <label
    class="meeting-input_name flex-row center-y"
    style="margin-top: 8px;"
  ><span>Permissions
    </span>
    <svg xmlns="http://www.w3.org/2000/svg" height="20" width="20"><path
        d="m6.104 15.271-.458-.459L10 10.479l4.354 4.333-.458.459L10 11.354Zm0-5.75-.458-.438L10 4.729l4.354 4.354-.458.438L10 5.604Z"
      ></path></svg>
  </label>
  <div class="flex-row">
    <button class="btn">Cancel</button>
    <button class="btn active">Save</button>
  </div>

</div>